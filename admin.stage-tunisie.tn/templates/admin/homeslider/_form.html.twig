{{ form_start(form) }}
    <div class="row">
        <label class="col-md-2 text-right required">{{ form_label(form.legend,'Image') }}</label>
        <div class="col-md-7">
            <div class="form-group">
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            </div>
           
        </div>
    </div>
     {% if oldImage is defined and oldImage is not empty %}
        {% if oldImage['file_exists'] == true %}
                    <div class="row">
                        <label class="col-md-2 text-right"></label>
                        <div class="col-md-9 form-group">
                        <div class="content-thumb-slider">
                            <img src="{{asset(oldImage['url_image'])}}" class="thumb-slider-form"  />   
                        </div>
                        </div>
                    </div>  
                        
        {% endif %}
    {% endif %}
   <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.title,'Titre') }}</label>
        <div class="col-md-7">
            <div class="form-group">
                 {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
      <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.description,'Description') }}</label>
        <div class="col-md-7">
            <div class="form-group">
                 {{ form_widget(form.description, {'attr': {'class': 'form-control, tinyMCE'}}) }}
            </div>
        </div>
    </div>
     <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.url,'Url cible') }}</label>
        <div class="col-md-7">
            <div class="form-group">
                {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.legend,'Légende') }}</label>
        <div class="col-md-7">
            <div class="form-group">
                {{ form_widget(form.legend, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.status)}}</label>
        <div class="col-md-7">
            <div class="form-group">
                {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="text-right mt-3">
        <button type="submit" class="btn btn-info">{{ button_label|default('Enregistrer') }}</button>
        <a href="{{ path('homeslider') }}" class="btn btn-dark">Retour à la liste</a>
    </div>
{{ form_end(form) }}
