    <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.actif)}}</label>
        <div class="col-md-7">
            <div class="form-group">
                {{ form_widget(form.actif, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.titre) }}</label>
        <div class="col-md-7">
            <div class="form-group">
                 {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.type_de_page) }}</label>
        <div class="col-md-7">
            <div class="form-group">
                 {{ form_widget(form.type_de_page, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
     <div class="row row-optional" id="row-link" style="display:none">
        <label class="col-md-2 text-right">{{ form_label(form.link) }}</label>
        <div class="col-md-7">
            <div class="form-group">
                 {{ form_widget(form.link, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.navigation) }}</label>
        <div class="col-md-7">
            <div class="form-group">
                 {{ form_widget(form.navigation, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.target) }}</label>
        <div class="col-md-7">
            <div class="form-group">
                 {{ form_widget(form.target, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
 
 <div class="row">
        <label class="col-md-2 text-right">Onglet parent</label>
        <div class="col-md-7">
            <div class="form-group">
            
                            
                        <select name="id_parent" class="form-control">  
                                    {% if liste_ids2 is defined %}
                                        {% for item in liste_ids2 %}
                                            <option  value="{{item.id}}" {{navigationListe.idparent == item.id?'selected':''}} >{{item.titre}} </option>
                                        {% endfor %} 
                                    {% endif %}
                                    <option value="0"{{navigationListe.idparent == 0?'selected':''}} >-</option>
                        </select>
                 
            </div>
        </div>
    </div>

       <div class="row">
        <label class="col-md-2 text-right">{{ form_label(form.no_follow) }}</label>
        <div class="col-md-7">
            <div class="form-group">
                 {{ form_widget(form.no_follow, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="text-right mt-3">
        <button type="submit" class="btn btn-info">{{ button_label|default('Enregistrer') }}</button>
        <a href="{{path('navigation')}}/liste?id={{ id_navigation }}" class="btn btn-dark">Retour Ã  la liste</a>
    </div>
{{ form_end(form) }}
